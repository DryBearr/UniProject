@using DTOs
@model RequestUserDto

<h2>Create User</h2>


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Username" class="control-label">Username:</label>
        <input asp-for="Username" class="form-control" name="Username" />
    </div>

    <div class="form-group">
        <label asp-for="UnhashedPassword" class="control-label">Password:</label>
        <input asp-for="UnhashedPassword" class="form-control" type="password" name="UnhashedPassword" />
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<a href="@Url.Action("Index","User")" class="btn btn-success">Back</a>

